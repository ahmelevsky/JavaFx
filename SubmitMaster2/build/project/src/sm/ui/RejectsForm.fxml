<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox minHeight="600.0" minWidth="1000.0" prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sm.ui.RejectsController">
   <children>
      <HBox VBox.vgrow="NEVER">
         <children>
            <Button fx:id="updateBtn" mnemonicParsing="false" onAction="#updateDatabase" text="UPDATE DATABASE">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin>
            </Button>
            <Pane HBox.hgrow="ALWAYS" />
            <Button fx:id="testBtn" mnemonicParsing="false" onAction="#testBtnClick" text="TEST" visible="false">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="displayLastBtn" mnemonicParsing="false" onAction="#getLastContent" text="Display last content" visible="false">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
      <HBox VBox.vgrow="NEVER">
         <children>
            <CheckBox fx:id="showDescriptionBox" mnemonicParsing="false" onAction="#showDescriptionColumn" text="Show Description">
               <HBox.margin>
                  <Insets bottom="5.0" left="20.0" right="5.0" top="10.0" />
               </HBox.margin>
            </CheckBox>
            <CheckBox fx:id="showKeywordsBox" mnemonicParsing="false" onAction="#showKeywordsColumn" text="Show Keywords">
               <HBox.margin>
                  <Insets bottom="5.0" left="20.0" right="5.0" top="10.0" />
               </HBox.margin>
            </CheckBox>
            <Pane HBox.hgrow="ALWAYS" />
            <Label fx:id="filesCountTxt" text="Files Count: 0">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="20.0" top="10.0" />
               </HBox.margin>
            </Label>
         </children>
      </HBox>
      <TableView fx:id="tableView" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="columnName" editable="false" maxWidth="1000.0" minWidth="50.0" prefWidth="200.0" sortable="false">
               <graphic>
                  <VBox spacing="10.0">
                     <children>
                        <HBox spacing="10.0">
                           <children>
                              <Label text="Filename" />
                              <CheckBox fx:id="correctFilenameBox" mnemonicParsing="false" onAction="#correctFilename" selected="true" text="Correction SS" />
                           </children>
                           <padding>
                              <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                           </padding>
                           <VBox.margin>
                              <Insets top="5.0" />
                           </VBox.margin>
                        </HBox>
                        <Pane VBox.vgrow="ALWAYS" />
                        <TextField fx:id="filenameFilter" />
                     </children>
                  </VBox>
               </graphic>
            </TableColumn>
          <TableColumn fx:id="columnPreview" editable="false" maxWidth="800.0" minWidth="20.0" prefWidth="100.0" sortable="false">
               <graphic>
                  <Slider fx:id="slider" max="300.0" min="10.0" prefHeight="20.0" prefWidth="200.0" value="50.0" />
               </graphic></TableColumn>
            <TableColumn fx:id="columnType" editable="false" maxWidth="70.0" minWidth="40.0" prefWidth="60.0" resizable="false" sortable="false">
               <graphic>
                  <VBox spacing="10.0">
                     <children>
                        <Label text="Type">
                           <VBox.margin>
                              <Insets left="5.0" top="5.0" />
                           </VBox.margin>
                        </Label>
                        <CheckBox fx:id="selectRaster" mnemonicParsing="false" selected="true" text="Raster" />
                        <CheckBox fx:id="selectVector" mnemonicParsing="false" selected="true" text="Vector" />
                     </children>
                  </VBox>
               </graphic></TableColumn>
            <TableColumn fx:id="columnSubmitDate" editable="false" maxWidth="150.0" minWidth="150.0" prefWidth="150.0" resizable="false" sortable="false">
               <graphic>
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Upload Date">
                           <VBox.margin>
                              <Insets left="5.0" top="5.0" />
                           </VBox.margin>
                        </Label>
                        <DatePicker fx:id="uploadDateFrom" prefWidth="150.0" />
                        <DatePicker fx:id="uploadDateTo" prefWidth="150.0" />
                     </children>
                  </VBox>
               </graphic></TableColumn>
            <TableColumn fx:id="columnReviewDate" editable="false" maxWidth="160.0" minWidth="160.0" prefWidth="160.0" resizable="false" sortable="false">
               <graphic>
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Review Date">
                           <VBox.margin>
                              <Insets left="5.0" top="5.0" />
                           </VBox.margin></Label>
                        <DatePicker fx:id="verdictDateFrom" prefWidth="160.0" />
                        <DatePicker fx:id="verdictDateTo" prefWidth="160.0" />
                     </children>
                  </VBox>
               </graphic></TableColumn>
            <TableColumn fx:id="columnStatus" editable="false" maxWidth="200.0" minWidth="40.0" prefWidth="100.0" resizable="false" sortable="false">
               <graphic>
                  <VBox spacing="10.0">
                     <children>
                        <Label text="Status">
                           <VBox.margin>
                              <Insets left="5.0" top="5.0" />
                           </VBox.margin>
                        </Label>
                        <CheckBox fx:id="selectApproved" mnemonicParsing="false" selected="true" text="Approved" />
                        <CheckBox fx:id="selectRejected" mnemonicParsing="false" selected="true" text="Rejected" />
                     </children>
                  </VBox>
               </graphic></TableColumn>
            <TableColumn fx:id="columnReason" editable="false" maxWidth="300.0" sortable="false">
               <graphic>
                  <VBox spacing="10.0">
                     <children>
                        <Label text="Rejects Reason">
                           <VBox.margin>
                              <Insets left="5.0" top="5.0" />
                           </VBox.margin>
                        </Label>
                        <Pane VBox.vgrow="ALWAYS" />
                        <TextField fx:id="reasonFilter" />
                     </children>
                  </VBox>
               </graphic></TableColumn>
            <TableColumn fx:id="columnDescription" editable="false" maxWidth="1000.0" minWidth="20.0" prefWidth="250.0" sortable="false">
               <graphic>
                  <VBox spacing="10.0">
                     <children>
                        <Label text="Description">
                           <VBox.margin>
                              <Insets left="5.0" top="5.0" />
                           </VBox.margin>
                        </Label>
                        <Pane VBox.vgrow="ALWAYS" />
                        <TextField fx:id="descriptionFilter" />
                     </children>
                  </VBox>
               </graphic></TableColumn>
            <TableColumn fx:id="columnKeywords" editable="false" maxWidth="1000.0" minWidth="20.0" prefWidth="200.0" sortable="false">
               <graphic>
                  <VBox spacing="10.0">
                     <children>
                        <Label text="Keywords">
                           <VBox.margin>
                              <Insets left="5.0" top="5.0" />
                           </VBox.margin>
                        </Label>
                        <Pane VBox.vgrow="ALWAYS">
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </Pane>
                        <TextField fx:id="keywordsFilter" />
                     </children>
                  </VBox>
               </graphic></TableColumn>
            <TableColumn fx:id="columnKeywordsCount" editable="false" maxWidth="25.0" minWidth="25.0" prefWidth="25.0" resizable="false" text="N" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <Pagination fx:id="pagination" maxPageIndicatorCount="30" VBox.vgrow="NEVER" />
   </children>
</VBox>
