<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="klt.ui.MainWindowController">
  <children>
    <MenuBar VBox.vgrow="NEVER">
      <menus>
        <Menu mnemonicParsing="false" text="Help">
          <items>
            <MenuItem mnemonicParsing="false" text="About" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
    <SplitPane dividerPositions="0.5" focusTraversable="true" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
      <items>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <VBox>
                     <children>
                        <TextField fx:id="queryInput" />
                        <HBox spacing="10.0">
                           <children>
                              <Button fx:id="selectAllBtn" mnemonicParsing="false" onAction="#selectAll" prefHeight="26.0" prefWidth="100.0" text="Select All" />
                              <Button fx:id="unSelectAllBtn" mnemonicParsing="false" onAction="#unselectAll" prefWidth="100.0" text="Unselect All" />
                              <Pane HBox.hgrow="ALWAYS" />
                              <Button fx:id="searchBtn" mnemonicParsing="false" onAction="#search" prefHeight="26.0" prefWidth="100.0" text="Seach" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
              <ScrollPane fx:id="sp" hbarPolicy="NEVER" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
                     <content>
                        <FlowPane fx:id="imagesContainer" hgap="10.0" prefWrapLength="0.0" vgap="10.0" />
                     </content>
              </ScrollPane>
                  <VBox fx:id="progressBarBox">
                     <children>
                        <ProgressBar fx:id="loadBar" progress="0.0" />
                     </children>
                  </VBox>
               </children>
            </VBox>
            <ScrollPane hbarPolicy="NEVER" SplitPane.resizableWithParent="false">
               <content>
                  <VBox fillWidth="false">
                     <children>
                        <TextArea fx:id="ta" wrapText="true" VBox.vgrow="ALWAYS">
                           <VBox.margin>
                              <Insets right="5.0" />
                           </VBox.margin>
                        </TextArea>
                     </children></VBox>
               </content>
            </ScrollPane>
      </items>
    </SplitPane>
    <HBox id="HBox" alignment="CENTER_LEFT" spacing="5.0" VBox.vgrow="NEVER">
      <children>
        <Label fx:id="leftStatusLabel" maxHeight="1.7976931348623157E308" maxWidth="-1.0" HBox.hgrow="ALWAYS">
          <font>
            <Font size="11.0" fx:id="x3" />
          </font>
          <textFill>
            <Color blue="0.625" green="0.625" red="0.625" fx:id="x4" />
          </textFill>
        </Label>
        <Pane prefHeight="-1.0" prefWidth="-1.0" HBox.hgrow="ALWAYS" />
        <Label fx:id="rightStatusLabel" font="$x3" maxWidth="-1.0" textFill="$x4" HBox.hgrow="NEVER" />
      </children>
      <padding>
        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
      </padding>
    </HBox>
  </children>
</VBox>
