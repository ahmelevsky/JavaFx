<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="480.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="te.view.TargetsWindowController">
   <children>
      <VBox prefHeight="480.0" prefWidth="1000.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <GridPane minHeight="80.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="320.0" minWidth="10.0" prefWidth="320.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="634.0" minWidth="10.0" prefWidth="320.0" />
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="666.0" minWidth="10.0" prefWidth="320.0" />
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="245.0" minWidth="0.0" prefWidth="45.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <TextArea fx:id="inputTargetKwd" prefHeight="80.0" prefWidth="340.0" />
                  <TextArea fx:id="inputTargetDescr1" prefHeight="80.0" prefWidth="330.0" GridPane.columnIndex="1" />
                  <TextArea fx:id="inputTargetDescr2" prefHeight="80.0" prefWidth="332.0" GridPane.columnIndex="2" />
                  <Button fx:id="addDataBtn" mnemonicParsing="false" onAction="#addData" prefHeight="87.0" prefWidth="43.0" text="+" GridPane.columnIndex="3">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Button>
               </children>
            </GridPane>
            <TableView fx:id="targetsTable" editable="true" prefWidth="1000.0">
              <columns>
                <TableColumn fx:id="targetKwdColumn" prefWidth="-1.0" text="TargetKwd" />
                <TableColumn fx:id="targetDescr1Column" prefWidth="-1.0" text="TargetDescr1" />
                <TableColumn fx:id="targetDescr2Column" prefWidth="-1.0" text="TargetDescr2" />
                  <TableColumn fx:id="removeRowColumn" maxWidth="65.0" minWidth="40.0" prefWidth="65.0" resizable="false" text="-" />
              </columns>
               <cursor>
                  <Cursor fx:constant="TEXT" />
               </cursor>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <BorderPane prefHeight="50.0" prefWidth="200.0">
               <left>
                  <Button fx:id="addBtn" mnemonicParsing="false" onAction="#addRow" text="+" BorderPane.alignment="CENTER">
                     <BorderPane.margin>
                        <Insets left="10.0" right="10.0" />
                     </BorderPane.margin>
                  </Button>
               </left>
               <right>
                  <HBox spacing="20.0" BorderPane.alignment="CENTER">
                     <children>
                        <Button fx:id="saveBtn" lineSpacing="10.0" mnemonicParsing="false" onAction="#saveVariablesToFile" text="Сохранить">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </Button>
                        <Button fx:id="loadBtn" mnemonicParsing="false" onAction="#loadVariablesFromFile" text="Загрузить" />
                     </children>
                     <BorderPane.margin>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                     </BorderPane.margin>
                  </HBox>
               </right>
            </BorderPane>
         </children>
      </VBox>
   </children>
</AnchorPane>
