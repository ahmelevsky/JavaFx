                                             </VBox.margin>
                                          </Label>
                                          <HBox>
                                             <children>
                                                <Label text="&gt;=" HBox.hgrow="ALWAYS">
                                                   <HBox.margin>
                                                      <Insets top="5.0" />
                                                   </HBox.margin>
                                                </Label>
                                                <TextField fx:id="downloadsMoreFilter" prefWidth="40.0" HBox.hgrow="SOMETIMES">
                                                   <HBox.margin>
                                                      <Insets left="5.0" right="5.0" />
                                                   </HBox.margin>
                                                </TextField>
                                             </children>
                                          </HBox>
                                          <HBox>
                                             <children>
                                                <Label text="&lt;=" HBox.hgrow="ALWAYS">
                                                   <HBox.margin>
                                                      <Insets top="5.0" />
                                                   </HBox.margin>
                                                </Label>
                                                <TextField fx:id="downloadsLessFilter" prefWidth="40.0" HBox.hgrow="SOMETIMES">
                                                   <HBox.margin>
                                                      <Insets bottom="5.0" left="5.0" right="5.0" />
                                                   </HBox.margin>
                                                </TextField>
                                             </children>
                                          </HBox>
                                          <Label fx:id="downloadsCountLbl" text=" ">
                                             <VBox.margin>
                                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                             </VBox.margin>
                                          </Label>
                                       </children>
                                    </VBox>
                                 </graphic>
                              </TableColumn>
                              <TableColumn fx:id="columnEarnings" editable="false" maxWidth="300.0" sortable="false">
                                 <graphic>
                                    <VBox spacing="10.0">
                                       <children>
                                          <Label text="Earnings, $">
                                             <VBox.margin>
                                                <Insets left="5.0" top="5.0" />
                                             </VBox.margin>
                                          </Label>
                                          <HBox>
                                             <children>
                                                <Label text="&gt;=" HBox.hgrow="ALWAYS">
                                                   <HBox.margin>
                                                      <Insets top="5.0" />
                                                   </HBox.margin>
                                                </Label>
                                                <TextField fx:id="earningsMoreFilter" prefWidth="40.0" HBox.hgrow="SOMETIMES">
                                                   <HBox.margin>
                                                      <Insets left="5.0" right="5.0" />
                                                   </HBox.margin>
                                                </TextField>
                                             </children>
                                          </HBox>
                                          <HBox>
                                             <children>
                                                <Label text="&lt;=" HBox.hgrow="ALWAYS">
                                                   <HBox.margin>
                                                      <Insets top="5.0" />
                                                   </HBox.margin>
                                                </Label>
                                                <TextField fx:id="earningsLessFilter" prefWidth="40.0" HBox.hgrow="SOMETIMES">
                                                   <HBox.margin>
                                                      <Insets bottom="5.0" left="5.0" right="5.0" />
                                                   </HBox.margin>
                                                </TextField>
                                             </children>
                                          </HBox>
