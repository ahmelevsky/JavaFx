                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="updateTopBtn" mnemonicParsing="false" onAction="#updateTopPerformance" text="UPDATE TOP PERFORMANCE">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="updateTopKeywordsBtn" mnemonicParsing="false" onAction="#updateTopKeywords" text="UPDATE TOP KEYWORDS">
