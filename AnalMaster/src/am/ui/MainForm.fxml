                                          <Label text="Description">
                                             <VBox.margin>
                                                <Insets left="5.0" top="5.0" />
                                             </VBox.margin>
                                          </Label>
                                          <Pane VBox.vgrow="ALWAYS" />
                                          <TextField fx:id="descriptionFilter" />
                                       </children>
                                    </VBox>
                                 </graphic>
                              </TableColumn>
                              <TableColumn fx:id="columnKeywords" editable="false" maxWidth="1000.0" minWidth="20.0" prefWidth="200.0" sortable="false">
                                 <graphic>
                                    <VBox spacing="10.0">
                                       <children>
                                          <Label text="Keywords">
                                             <VBox.margin>
                                                <Insets left="5.0" top="5.0" />
                                             </VBox.margin>
                                          </Label>
                                          <Pane VBox.vgrow="ALWAYS">
                                             <VBox.margin>
                                                <Insets />
                                             </VBox.margin>
                                          </Pane>
                                          <TextField fx:id="keywordsFilter" onAction="#updateTopKeywords" />
                                       </children>
                                    </VBox>
                                 </graphic>
                              </TableColumn>
                          </columns>
