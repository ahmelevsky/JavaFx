                                    <VBox spacing="10.0">
                                       <children>
                                          <Label text="Type">
                                             <VBox.margin>
                                                <Insets left="5.0" top="5.0" />
                                             </VBox.margin>
                                          </Label>
                                          <CheckBox fx:id="selectRaster" mnemonicParsing="false" selected="true" text="Raster" />
