                                             <VBox.margin>
                                                <Insets left="5.0" top="5.0" />
                                             </VBox.margin>
                                          </Label>
                                          <DatePicker fx:id="uploadDateFrom" prefWidth="150.0" />
                                          <DatePicker fx:id="uploadDateTo" prefWidth="150.0" />
                                       </children>
                                    </VBox>
                                 </graphic>
                              </TableColumn>
                              <TableColumn fx:id="columnDownloads" editable="false" maxWidth="200.0" minWidth="40.0" prefWidth="100.0" resizable="false" sortable="false">
                                 <graphic>
                                    <VBox spacing="10.0">
                                       <children>
                                          <Label text="Downloads">
