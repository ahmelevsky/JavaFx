<VBox minHeight="600.0" minWidth="1000.0" prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="am.ui.MainController">
   <children>
      <HBox VBox.vgrow="NEVER">
         <children>
            <TextField fx:id="sessionIdText" minWidth="400.0">
