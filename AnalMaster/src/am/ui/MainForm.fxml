                        <TextFlow fx:id="logTxt" prefHeight="79.0" prefWidth="1196.0">
                           <opaqueInsets>
                              <Insets />
                           </opaqueInsets>
                        </TextFlow>
                     </content>
                  </ScrollPane>
               </children>
            </AnchorPane>
         </items>
      </SplitPane>
   </children>
