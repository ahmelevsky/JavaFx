                                       </children>
                                    </VBox>
                                 </graphic>
                              </TableColumn>
                              <TableColumn fx:id="columnDate" editable="false" maxWidth="150.0" minWidth="150.0" prefWidth="150.0" resizable="false" sortable="false">
