<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ot.view.MainController">
   <top>
      <TextArea fx:id="scriptInput" prefHeight="200.0" prefWidth="600.0" wrapText="true" BorderPane.alignment="CENTER" />
   </top>
   <bottom>
      <TextArea fx:id="scriptOutput" prefHeight="200.0" prefWidth="200.0" wrapText="true" BorderPane.alignment="CENTER" />
   </bottom>
   <right>
      <Button fx:id="runBtn" mnemonicParsing="false" onAction="#runScript" text="Run script!" BorderPane.alignment="CENTER" />
   </right>
   <left>
      <RadioButton fx:id="asb" mnemonicParsing="false" text="Apple Script" BorderPane.alignment="CENTER" />
   </left>
   <center>
      <RadioButton fx:id="jsb" mnemonicParsing="false" text="Java Script" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
